<% if @recent_projects.length > 0 %>
  <section class="pt-6 pt-md-8 bg-light p-3 p-md-5 text-dark">
    <div class="container pb-6 pb-md-8">
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12 text-center">      
          <!-- Preheading -->
          <h6 class="text-uppercase text-dark font-weight-bold">
            New <a href="/open-source">Open Source Projects</a>
          </h6>
          <!-- Heading -->
          <h1 class="font-weight-bold text-success">Some Projects We support</h1> 
        </div>         
      </div>  
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12 text-center">      
          <div class="row text-gray-500 mt-5 mb-7 mb-md-9">

            <% @recent_projects.each do |project| %>
              <div class="col-lg-4">
                <% if project["open_source"]["logo_src"].present? %>
                  <a href="/open-source/<%= project["site_name"] %>" class="d-flex">
                    <img class="d-block w-50 m-auto align-self-center"
                        src="<%= project["open_source"]["logo_src"] %>" 
                        alt="<%= project["site_name"] %>">
                  </a> 
                <% else %>
                  <a href="/open-source/<%= project["site_name"] %>" 
                    class="d-flex no-logo-link">
                    <h3 class="text-dark w-50 align-self-center text-center text-decoration-none mb-3 mt-3 ml-auto mr-auto">
                      <%= project["open_source"]["title"]&.upcase %>
                    </h3>
                  </a>          
                <% end %>
                <p class="text-muted">
                  <%=h truncate(project["open_source"]["description"], length: 50) %>
                </p>
                <p>
                  <a class="btn btn-dark" 
                    href="/open-source/<%= project["site_name"] %>" role="button">
                    Visit Project Â»
                  </a>
                </p>
              </div>
            <% end %>

          </div>  
        </div>         
      </div>
    </div>
  </section>
<% end %>

