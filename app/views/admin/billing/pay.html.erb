
<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">On Demand Payment</h1>
</section>
<section>
  <div class="row">
    <div class="col-lg-9">
      <div class="card">
        <div class="card-body">        
          <h5>On demand account credits</h5>
          <h5><%= @user['credits'] %></h5>

          <div class="mb-3 bd-callout bd-callout-warning">
            100 credits correspond to 1 US dollar.
          </div>

          

          <p>
            See the <a href="/on-demand-pricing">on demand pricing</a>.
            For each website, credits will be spent depending on the website type whenever it is online.
            We only bill websites which are up.
          </p>

          <div class="row"><br /><hr /></div>

          <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-3 text-center">
              <a href="/admin/billing/paypal">
                <img src="/images/billing/paypal.svg" style="height: 3.2vw;" />
                <br />
                Paypal/Credit Card
              </a>
            </div>

            <div class="col-lg-3 text-center">
              <a href="/admin/billing/crypto">
                <img src="/images/billing/bitcoin.svg" style="height: 3.2vw;" />
                <br />
                Cryptocurrencies

                <br /><br />

              </a>
              
              <small>Get 5% reward when you pay with crypto!</small>
            </div>
            <div class="col-lg-3">
            </div>
          </div>

        </div>    
      </div>
    </div>
    <div class="col-lg-3">
      <%= render 'admin/billing/sidebar' %>
    </div>    
  </div>
</section>
